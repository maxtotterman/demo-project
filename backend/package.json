{
  "name": "my-app",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "tsx watch --env-file .env src/server.ts",
    "start": "node --env-file .env dist/server.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --env-file .env.test --import tsx --test src/test/*.test.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/valibot-validator": "^0.5.2",
    "@valibot/to-json-schema": "^1.3.0",
    "hono": "^4.7.11",
    "hono-openapi": "^0.4.8",
    "kysely": "^0.28.2",
    "pg": "^8.16.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.4",
    "eslint": "^9.28.0",
    "eslint-plugin-perfectionist": "^4.14.0",
    "prettier": "^3.5.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
